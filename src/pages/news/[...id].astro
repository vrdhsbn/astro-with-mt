---
import Layout from '@/layouts/Layout.astro';
import { getEntries } from '@/hooks/getEntries';
import { getCustomFields } from '@/hooks/getCustomFields';
import Heading from '@/components/Heading';
import { Container, Box, styled } from 'styled-system/jsx';

// MTの各投稿記事のオブジェクトの型ってどうしたらいい？
type PostType = Record<string, unknown>;

export async function getStaticPaths() {
  const posts = await getEntries();
  const fields = await getCustomFields();
  // console.log(fields.items)

  return posts.items.map((post: PostType) => {
    return {
      params: { id: post.id },
      props: {
        title: post.title,
        body: post.body,
        customFields: post.customFields,
        date: post.date,
      },
    };
  });
}

const { title, body, customFields, date } = Astro.props;
---

<Layout title={title}>
  <Container maxW={'640px'} pt={'64px'} pb={'64px'}>
    <Heading>{title}</Heading>
    {(<styled.p mt="8px">投稿日：{date.split('T')[0]}</styled.p>)}
    {
      // customFieldsのbasenameからfield.nameを取ってくるには？
      customFields.map((field: any) => {
        return (
          <styled.p mt="8px">
            {/*{field.basename}：{field.value}*/}
            この記事を読むのに必要な時間：{field.value}分
          </styled.p>
        );
      })
    }
    <Box mt={'24px'} className="content">
      <div set:html={body} />
    </Box>
  </Container>
</Layout>
